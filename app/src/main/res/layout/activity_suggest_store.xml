<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <EditText
            android:id="@+id/ed_namatoko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nama_toko"
            android:padding="10dp"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:textColor="@color/bg_black" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/ed_alamattoko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat"
            android:gravity="left|start"
            android:ellipsize="end"
            android:lines="4"
            android:padding="10dp"
            android:singleLine="true"
            android:inputType="text"
            android:textColor="@color/bg_black" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

         <EditText
            android:id="@+id/ed_tlptoko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:padding="10dp"
             android:singleLine="true"
             android:inputType="number"
            android:imeOptions="actionNext"
            android:textColor="@color/bg_black" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_emailtoko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Store Email"
            android:padding="10dp"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:textColor="@color/bg_black" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <EditText
            android:id="@+id/ed_regiontoko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Store Region"
            android:padding="10dp"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textColor="@color/bg_black" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
</RelativeLayout>