<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <EditText
                android:id="@+id/ed_indosat_activity_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Activity Title"
                android:imeOptions="actionDone"
                android:padding="10dp"
                android:textColor="@color/bg_black" />

            <EditText
                android:id="@+id/ed_indosat_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:gravity="start"
                android:lines="5"
                android:maxLines="5"
                android:padding="10dp"
                android:textColor="@color/bg_black" />

            <EditText
                android:id="@+id/ed_tgl_mulai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/bg_black"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_tgl_mulai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/selector_btn_rounded"
                android:padding="10dp"
                android:text="Activities Date"
                android:textColor="@color/bg_white" />

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:background="@drawable/selector_btn_rounded"
                android:padding="10dp"
                android:text="@string/txt_input_image"
                android:textColor="@color/bg_white" />
            
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:gravity="center_horizontal"
            android:text="@string/max_3"/>

            <HorizontalScrollView
                android:id="@+id/wrapper_horizontalview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wrapper"
                android:visibility="invisible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp" >

                    <ImageView
                        android:id="@+id/img_00"
                        android:layout_width="100dp"
                        android:layout_height="170dp"
                        android:padding="5dp"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/img_01"
                        android:layout_width="100dp"
                        android:layout_height="170dp"
                        android:padding="5dp"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/img_02"
                        android:layout_width="100dp"
                        android:layout_height="170dp"
                        android:padding="5dp"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/img_03"
                        android:layout_width="100dp"
                        android:layout_height="170dp"
                        android:padding="5dp"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/img_04"
                        android:layout_width="100dp"
                        android:layout_height="170dp"
                        android:padding="5dp"
                        android:visibility="invisible" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/selector_btn_rounded"
            android:padding="10dp"
            android:text="@string/txt_submit"
            android:textColor="@color/bg_white"
            android:visibility="gone" />
    </RelativeLayout>

</ScrollView>