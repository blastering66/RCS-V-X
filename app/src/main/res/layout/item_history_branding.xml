<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TableLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        
        <TableRow 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_nama_toko"/>
            
            <TextView 
                android:id="@+id/item_historybranding_namatoko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                />
        </TableRow>
        
        <TableRow 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_time_date"/>
            
            <TextView 
                android:id="@+id/item_historybranding_jamtgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                />
        </TableRow>
        
        <TableRow 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_desc"/>
            
            <TextView 
                android:id="@+id/item_historybranding_ket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="3"
                android:paddingLeft="10dp"
                />
        </TableRow>
        
       
    </TableLayout>
    

</LinearLayout>
