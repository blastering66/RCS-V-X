<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ed_namatoko"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_nama_toko"
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="25sp"
                    android:textColor="@color/bg_black" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ed_store_username_regis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_store_username_regis"
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="25sp"
                    android:textColor="@color/bg_black" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ed_store_phone_regis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_store_phone_regis"
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="25sp"
                    android:textColor="@color/bg_black" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ed_store_email_regis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_store_email_regis"
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="25sp"
                    android:textColor="@color/bg_black" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/ed_ket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_ket"
                    android:imeOptions="actionDone"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="25sp"
                    android:textColor="@color/bg_black" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkbox_topup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OLX Topup Saldo"
                    android:textColor="@color/primaryColorDark"
                    android:textSize="25sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/ed_nominal_topup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_nominal_topup"
                        android:imeOptions="actionDone"
                        android:padding="10dp"
                        android:gravity="right"
                        android:inputType="text"
                        android:textSize="25sp"
                        android:textColor="@color/bg_black"
                        android:visibility="gone" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="15dp"
                android:background="@drawable/selector_btn_rounded"
                android:padding="15dp"
                android:text="@string/txt_input_image"
                android:textSize="25sp"
                android:textColor="@color/bg_white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wrapper"
            android:layout_centerHorizontal="true"
            android:text="@string/max_2"
            android:textSize="20sp"
            android:textStyle="italic" />

        <HorizontalScrollView
            android:id="@+id/wrapper_horizontalview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <ImageView
                    android:id="@+id/img_00"
                    android:layout_width="100dp"
                    android:layout_height="170dp"

                    android:padding="5dp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_01"
                    android:layout_width="100dp"
                    android:layout_height="170dp"

                    android:padding="5dp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_02"
                    android:layout_width="100dp"
                    android:layout_height="170dp"

                    android:padding="5dp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_03"
                    android:layout_width="100dp"
                    android:layout_height="170dp"

                    android:padding="5dp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_04"
                    android:layout_width="100dp"
                    android:layout_height="170dp"

                    android:padding="5dp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_05"
                    android:layout_width="100dp"
                    android:layout_height="170dp"

                    android:padding="5dp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_06"
                    android:layout_width="100dp"
                    android:layout_height="170dp"

                    android:padding="5dp"
                    android:visibility="invisible" />
            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

</ScrollView>